<div class="container">
  <h1><%= @task.title %></h1>
  <%= link_to 'Edit task', edit_task_path, class: "btn btn-dark gap-2" %>
  <p><%= @task.details %></p>
  <p><% if @task.completed? %>
  <i class="fa-solid fa-square-check"></i> This task is completed
  <% else %>
  <i class="fa-regular fa-square"></i> This task is not completed yet
  <% end %></p>

  <p><%= link_to 'Back to list',tasks_path %></p>
</div>
